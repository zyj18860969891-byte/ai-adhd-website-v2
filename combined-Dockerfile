# Combined Dockerfile for API Server and MCP Services
FROM node:lts-alpine

# Install necessary build tools and bash
RUN apk add --no-cache bash

# Create app directory
WORKDIR /app

# Install app dependencies
COPY package*.json ./

# Install dependencies without running lifecycle scripts
RUN npm install --ignore-scripts

# Bundle app source code - only api-server directory will be copied by Railway
COPY api-server ./api-server
COPY churnflow-mcp ./churnflow-mcp
COPY mcp-shrimp-task-manager ./mcp-shrimp-task-manager

# Fix permissions for node_modules binaries
RUN chmod +x node_modules/.bin/*

# Make the startup script executable
RUN chmod +x /app/api-server/start-all-services.sh

# Build the TypeScript code for each service separately
RUN cd api-server && npm run build
RUN cd churnflow-mcp && npm run build
RUN cd mcp-shrimp-task-manager && npm run build

# Expose ports for services
EXPOSE 3003 3008 3009

# Command to run all services in the container
CMD [ "/app/api-server/start-all-services.sh" ]