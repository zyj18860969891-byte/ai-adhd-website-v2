{
  "name": "churnflow-mcp",
  "version": "0.4.2",
  "description": "An MCP server for the ChurnFlow ADHD-friendly productivity system",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "mcp": "tsx src/index.ts",
    "cli": "tsx src/cli.ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "db:setup": "npm run db:migrate && npm run db:seed",
    "db:reset": "rm -f churnflow.db && npm run db:setup",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:seed": "node db-init.js",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push"
  },
  "keywords": [
    "mcp",
    "productivity",
    "adhd",
    "ai-assistant",
    "task-management"
  ],
  "author": "Johnny Gibson <jgsteeler@gmail.com>",
  "organization": "Gibson Service Company, LLC - Development Division (GSC Dev)",
  "homepage": "https://github.com/jgsteeler/churnflow-mcp",
  "bugs": {
    "url": "https://github.com/jgsteeler/churnflow-mcp/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jgsteeler/churnflow-mcp.git"
  },
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.4.0",
    "@paralleldrive/cuid2": "^2.2.2",
    "@types/better-sqlite3": "^7.6.13",
    "better-sqlite3": "^12.2.0",
    "chalk": "^5.6.2",
    "drizzle-orm": "^0.44.5",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.9.6",
    "openai": "^4.0.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^8.0.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.0.0"
  },
  "optionalDependencies": {
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
